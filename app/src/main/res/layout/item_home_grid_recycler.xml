<?xml version="1.0" encoding="utf-8"?>
<com.mobi.clearsafe.main.widget.SquareLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/recycler_item_selector"
    android:gravity="center">

    <ImageView
        android:id="@+id/ivIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tvName"
        android:textColor="@color/black_33"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:text="清理内存"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</com.mobi.clearsafe.main.widget.SquareLinearLayout>